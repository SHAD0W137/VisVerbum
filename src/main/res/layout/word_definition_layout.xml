<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/definition_view_root"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="8dp"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/grey"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="4dp"
    android:paddingBottom="8dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="WORD"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:background="@color/red_main"
        android:contentDescription="Close"
        app:tint="@android:color/white"/>
</LinearLayout>

    <!-- Вкладки (кнопки частей речи) -->
<HorizontalScrollView
android:id="@+id/posTabsScrollView"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:scrollbars="none"
android:background="#F0F0F0"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:visibility="gone">

<LinearLayout
android:id="@+id/posTabsContainer"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:paddingStart="8dp"
android:paddingEnd="8dp"/>
    </HorizontalScrollView>

<ScrollView
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1"
android:minHeight="100dp"
    android:backgroundTint="@color/white"
android:padding="12dp">

<TextView
    android:id="@+id/definitionText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Loading definition..."
    android:textColor="@android:color/black"
    android:textSize="16sp" />
</ScrollView>

    <!-- Кнопки действий -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:paddingStart="4dp"
android:paddingEnd="4dp"
android:paddingBottom="4dp"
android:gravity="center">

<Button
    android:id="@+id/saveButton"
    style="?android:attr/buttonBarButtonStyle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Save"
    android:textColor="@color/red_main"
    android:textSize="14sp" />

<Button
    android:id="@+id/googleSearchButton"
    style="?android:attr/buttonBarButtonStyle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Google"
    android:textColor="@color/red_main"
    android:textSize="14sp" />
</LinearLayout>

    </LinearLayout>